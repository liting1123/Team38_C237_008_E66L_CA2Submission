<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style=" background-size:cover; background-image: url('https://i.pinimg.com/736x/ec/60/5d/ec605dab1eeb47cd3649ca54bc7aeb6c.jpg')">
    <div class="container">
        <h1 class="mt-5">Login</h1>
        <% if (errors && errors.length > 0) { %>
            <div class="alert alert-danger">
                <% errors.forEach(function(error) { %>
                    <p><%= error %></p>
                <% }); %>
            </div>
        <% } %>
        <form action="/login" method="POST" class="mt-4">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary m-3">Login</button>
            <p class="mt-3"> Not yet Register? <a href="/register">Register here</a></p>
        </form>
    </div>
</body>
</html>
