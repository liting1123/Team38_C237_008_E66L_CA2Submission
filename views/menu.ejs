<!DOCTYPE html>
<html>
<head>
    <title>Menu</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .table-img {
            width: 100px;
            height: 100px;
            object-fit: cover;
        }
        .table td {
            vertical-align: middle;
        }
        .heart-button {
            background: none;
            border: none;
            font-size: 1.5rem;
            color: #ccc; 
            align-items: center;
            justify-content: center;
            padding: 0;
            margin: 0;
        }
        .heart-button.favourited .fa-heart {
            color: red;
        }
    </style>
</head>
<body style=" background-image:url('https://i.pinimg.com/736x/d2/4c/9e/d24c9eba4ebc39ed95933d1ab85563be.jpg'); background-size: cover;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
      <div class="container-fluid">
        <a class="navbar-brand" href="/dashboard">Foodiess</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/dashboard">Dashboard</a>
            </li>
            <% if (user && user.role === 'admin') { %>
            <li class="nav-item">
              <a class="nav-link" href="/admin">Admin</a>
            </li>
            <% } %>
            <% if (user && user.role === 'user') { %>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/menu">Menu</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/favourites">Favourites <i class="fas fa-heart"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/cart">Cart</a>
            </li>
            <% } %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                More
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" href="/about">About</a></li>
                <li><a class="dropdown-item" href="/contact">Contact</a></li>
              </ul>
            </li>   
            <li class="nav-item">
              <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt me-1"></i>Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container mt-2">
        <br>
        <div class="text-center"><h2>Menu</h2></div>
        <br>
        <form class="mb-4" method="GET" action="/menu" id="menuSearchForm">
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="nameSearch" class="form-label visually-hidden">Search by name</label>
                    <div class="input-group"> 
                      <input type="text" class="form-control" id="nameSearch" name="name" placeholder="Search by name..." value="<%= typeof searchName !== 'undefined' ? searchName : '' %>">
                    </div>
                </div>
                <div class="col-md-6">
                    <label for="categorySelect" class="form-label visually-hidden">Search by category</label>
                    <div class="input-group"> <select class="form-select" id="categorySelect" name="category">
                            <option value="">All Categories</option>
                            <% if (categories && categories.length > 0) { %>
                                <% categories.forEach(cat => { %>
                                    <option value="<%= cat %>" <%= typeof selectedCategory !== 'undefined' && selectedCategory === cat ? 'selected' : '' %>>
                                        <%= cat %>
                                    </option>
                                <% }); %>
                            <% } %>
                        </select>
                        <button type="submit" class="btn btn-success">Search</button>
                      </div>    
                </div>
            </div>
        </form>
        <table class="table table-hover small text-center">
            <thead>
                <tr>
                    <th width="100">Name</th>
                    <th width="100">Favourite</th>
                    <th width="100">Image</th>
                    <th width="100">Price</th>
                    <th width="100">Category</th>
                    <th width="100">Quantity</th>
                    <th width="100">Action</th>
                </tr>
            </thead>
            <tbody>
                <% if (food && food.length > 0) { %>
                    <% for (let i = 0; i < food.length; i++) { %>
                        <tr>
                            <td><a href="/food/<%= food[i].idmenuItems %>" ><%= food[i].name %> </a></td>
                            <td>
                                <% if (food[i].isFavourited) { %>
                                    <form action="/removefavourite/<%= food[i].idmenuItems %>" method="POST" style="display:inline;">
                                        <button type="submit" class="heart-button favourited">
                                            <i class="fa fa-heart"></i>
                                        </button>
                                    </form>
                                <% } else { %>
                                    <form action="/addfavourites/<%= food[i].idmenuItems %>" method="POST" style="display:inline;">
                                        <button type="submit" class="heart-button">
                                            <i class="fa fa-heart"></i>
                                        </button>
                                    </form>
                                <% } %>
                            </td>
                            <td><img src="/Images/<%= food[i].image %>" class="table-img" width="100"></td>
                            <td>$<%= food[i].price %></td>
                            <td><%= food[i].category %></td>
                            <td> 
                                 <form action="/increaseQuantity/<%= food[i].idmenuItems %>" method="POST" style="display:inline;"">
                                <%= food.quantity %>
                                <button type="submit">+</button>
                                </form>
                                <span class="mx-2"><%= food[i].quantity || 0%></span>
                                <form action="/decreaseQuantity/<%= food[i].idmenuItems %>" method="POST" style="display:inline;">
                                <%= food.quantity %>
                                <button type="submit">-</button>
                                </form>
                            </td>
                            <td>
                            <form action="/add-to-cart/<%= food[i].idmenuItems%>" method="POST">
                                <button type="submit" class="btn btn-primary mt-3">Add to Cart</button>
                            </form>
                            </td>
                        </tr>
                    <% } %>
                <% } else { %>
                    <tr><td colspan="7">No food items available.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
    </body>
</html>